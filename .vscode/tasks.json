{
    "tasks": [
        {
            "label": "Build All - Debug Mode",
            "type": "shell",
            "windows": {
                "command": "build Debug",
            },
            "group": "build",
        },
        {
            "label": "Build Engine - Debug Mode",
            "type": "shell",
            "windows": {
                "command": "build Debug Engine",
            },
            "group": "build"
        },
        {
            "label": "Build Renderer - Debug Mode",
            "type": "shell",
            "windows": {
                "command": "build Debug Renderer",
            },
            "group": "build"
        },
        {
            "label": "Build All - Release Mode",
            "type": "shell",
            "windows": {
                "command": "build Release",
            },
            "group": "build"
        },
        {
            "label": "Build Shaders",
            "type": "shell",
            "windows": {
                "command": "build_shaders",
            },
            "group": "build"
        },
        {
            "label": "Build Current File - Debug Mode",
            "type": "shell",
            "windows": {
                "command": "cl",
                "args": [
                    "/I${workspaceFolder}/src",
                    "-EHsc",
                    "-FC",
                    "-fp:except-",
                    "-fp:fast",
                    "-Gm-",
                    "-GS-",
                    "-nologo",
                    "-Oi",
                    "-WL",
                    "-MTd",
                    "-Od",
                    "-Zi",
                    "-Zo",
                    "${file}"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/bin/Debug"
                }
            },
            "group": "build"
        },
        {
            "label": "Build Current File - Release Mode",
            "type": "shell",
            "windows": {
                "command": "build_file.bat Release ${file}",
            },
            "group": "build"
        },
    ],
    "version": "2.0.0",
    "problemMatcher": [
        "$msCompile"
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "group": "BuildGroup"
    },
    "options": {
        "cwd": "${workspaceFolder}"
    }
}