{
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "windows": {
                "command": "./build Debug",
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "windows": {
                "command": "./build Release",
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            }
        },
    ],
    "version": "2.0.0"
}